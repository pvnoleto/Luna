    "title_field": "Name",
    "date_field": "Data",
    "description_field": "Descrição",
    "duration_field": "Duração"
  },
  
  "advanced": {
    "_comment": "Configurações avançadas (opcional)",
    "log_level": "INFO",
    "max_retries": 3,
    "timeout": 30
