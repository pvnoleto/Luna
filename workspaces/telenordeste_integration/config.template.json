  "notion": {
    "api_token": "secret_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX",
    "database_id": "XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX",
    "filter_property": "Status",
    "filter_value": "A Fazer"
